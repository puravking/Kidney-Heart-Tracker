<style>
    .design{
        margin: 10px;
        font-size: large;
        background-color: rgb(163, 163, 111);
        color: black;
    }
</style>
<html>
    <script>
        function populateDiv() {
            const element = document.getElementById("finalSum");
            const a = document.getElementById("firstNumber").value;
            const b = document.getElementById("secondNumber").value;
            element.innerHTML = parseInt(a) + parseInt(b);
        }
    </script>
    <body >
        <input id="firstNumber" type="text" placeholder="first number" class="design"></input><br><br><br>
        <input id="secondNumber" type="text" placeholder="second number" class="design"></input><br><br><br>
        <br><button onclick="populateDiv()">Calculate sum</button>
        <div id = "finalSum"></div>
    </body>
</html>
